<%layout("/layouts/boilerplate")%>
<!-- <h3>All Items</h3> -->
<div id="filters">
  <form action="/items/filter/clothes" class="filter-form" method="get">
    <button type="submit">
      <div class="filter">
        <div><i class="fa-solid fa-shirt"></i></div>
        <p>Clothes</p>
      </div>
    </button>
  </form>

  <form action="/items/filter/sports" class="filter-form" method="get">
    <button type="submit">
      <div class="filter">
        <div><i class="fa-solid fa-baseball"></i></div>
        <p>Sports</p>
      </div>
    </button>
  </form>

  <form action="/items/filter/electronics" class="filter-form" method="get">
    <button type="submit">
      <div class="filter">
        <div><i class="fa-solid fa-plug"></i></div>
