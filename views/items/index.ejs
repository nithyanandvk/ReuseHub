      <div class="filter">
        <div><i class="fa-solid fa-globe"></i></div>
        <p>Others</p>
      </div>
    </button>
  </form>
</div>

<div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 mt-3">
  <%for(let item of allItems){%>
  <a href="/items/<%= item._id %>" class="item-link">
    <div class="card col item-card">
      <img
        src="<%= item.image.url %>"
        style="height: 20rem"
        class="card-img-top"
        alt="item-image"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= item.title %></b><br />
          <% if (item.category) { %> Category :
          <%=item.category.charAt(0).toUpperCase()+item.category.slice(1)%>
          <br />
          <% } %> &#8377;<%= item.price.toLocaleString("en-IN") %>
        </p>
      </div>
    </div>
    <%}%>
  </a>
</div>

